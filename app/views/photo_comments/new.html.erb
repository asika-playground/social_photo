<h1>Add New Comment</h1>

<% if @comment.errors.any? %>
      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<%= form_for [@photo, @comment] do |f| %>
  <%= f.text_area :content %>
  <%= f.submit "送出", :class => "btn btn-primary" %>
<% end %>