<h1>Add New Photo</h1>

<% if @photo.errors.any? %>
      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
<% end %>

<%= form_for @photo, :url => photos_path, :html => { :multipart => true } do |f| %>
  <%= f.file_field :image %>
  <%= f.text_field :description %>
  <%= f.text_field :tag_list, 'data-role'=>'tagsinput' %>

  <%= f.submit "送出", :class => "btn btn-primary" %>
<% end %>