<span class="glyphicon glyphicon-heart"></span>
<%= photo.likes.count %>
<span class="glyphicon glyphicon-comment"></span>
<%= photo.comments.count %>

<% if current_user %>

  <div class="stat-buttons pull-right">
    <%= link_to photo.liked_by?(current_user)? "Unlike" : "Like", photo_like_path(photo), :remote => true, :class => "btn btn-default" %>

    <%= link_to photo.subscribed_by?(current_user)? "Unsubscribe" : "Subscribe", photo_subscribe_path(photo), :remote => true, :class => "btn btn-default" %>

    <%= link_to "Delete", photo_path(photo), :method => :delete, :data => { :confirm => "Are you sure?" }, :remote => true, :class => "btn btn-sm btn-danger" %>
  </div>
  <div class="clearfix"></div>
<% end %>
